import random
import pygame
import math
import sys


def main():
    circleonetoggle = True
    circleoneoldMX = 0
    circleonesize = 30
    rolldirection = True
    pygame.init()
    pygame.display.set_caption("Snowman Game")
    clock = pygame.time.Clock()
    dt = 0
    resolution = (1920, 1080)
    screen = pygame.display.set_mode(resolution)
    running = True
    while running:
        # Event Loop
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                running = False
        # Game logic
        circletesthover = 1080 - circleonesize/3 * 2
        mx, my = pygame.mouse.get_pos()
        if(circleoneoldMX != mx & circleonetoggle == True):
            if(rolldirection == True & circleoneoldMX < mx):
                circleonesize = circleonesize + 1
                if(random.randrange(1, 50) == 1):
                    rolldirection = not rolldirection
                if(circleonesize == 180):
                    circleonetoggle = False
            else:
                circleonesize = circleonesize + 1
                if(random.randrange(1, 50) == 1):
                    rolldirection = not rolldirection
                if(circleonesize == 180):
                    circleonetoggle = False
        circleoneoldMX = mx
        # Render & Display
        black = pygame.Color(0, 0, 0)
        screen.fill(black)
        circleBG = pygame.draw.circle(screen, "red", (mx,circletesthover), 180, 0)
        if circleonetoggle == False:
            circleOne = pygame.draw.circle(screen, "white", (960,circletesthover), circleonesize, 0)
        else:
            circleOne = pygame.draw.circle(screen, "white", (mx,circletesthover), circleonesize, 0)

        pygame.display.flip()
        dt = clock.tick(22)
    pygame.quit()

if __name__ == "__main__":
    main()






